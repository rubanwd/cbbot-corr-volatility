# ── Маркет/данные ───────────────────────────────────────────────
SYMBOLS_FILE=symbols.txt              # путь к списку символов (по одному в строке)
USE_FUTURES=true                     # true/false   (spot=false, futures=true)
TIMEFRAME=1h                          # 15m, 1h, 4h ...
LOOKBACK_BARS=500

INDICATOR_TFS=15m,1h,4h,1d

# Минимум данных/качество
MIN_OBS_PER_SYMBOL=50
MIN_OBS_PER_PAIR=30

# RSI
RSI_PERIOD=14

# Порог слабой корреляции (берём abs(corr) < WEAK_CORR_ABS_THRESH)
WEAK_CORR_ABS_THRESH=0.30

# ── Вывод ───────────────────────────────────────────────────────
OUTPUT_DIR=./data

# Алерты
ALERT_NEGATIVE_THRESH=-0.30
ALERT_NEAR_ZERO_ABS=0.10
TOP_N_TO_LOG=50
TOP_N_TO_PERSIST=200     # 0 или пусто = все

# ── Расписание основного бота ───────────────────────────────────
RUN_EVERY_MINUTES=1      # используется, если HOURLY_AT пуст
HOURLY_AT=:01            # запуск раз в час в указанную минуту; оставь пусто, чтобы отключить

# ── Динамика ────────────────────────────

# Переключение режима
DYNAMIC_UNIVERSE_ENABLED=false    # false = брать из STATIC_SYMBOLS или symbols.txt

# Для статического режима (если DYNAMIC=false)
STATIC_SYMBOLS=
# либо файл symbols.txt (по умолчанию)

# Символьные фильтры (работают только в динамике)
DYN_SYMBOL_FILTERS_ENABLED=false
DYN_ALLOWED_BASES=BTC,ETH,BNB
DYN_BLOCKED_BASES=PEPE,DOGE
DYN_ALLOWED_SYMBOLS=
DYN_BLOCKED_SYMBOLS=

# Ликвидность
DYN_FILTER_VOLUME_ENABLED=true
MIN_DAILY_QUOTE_VOLUME_USD=100000000
DYN_PRESELECT_TOP_N_BY_VOLUME=300

# Капа (опционально)
CAP_FILTER_ENABLED=false
MIN_MARKET_CAP_USD=500000000

# ATR
DYN_FILTER_ATR_ENABLED=true
ATR_PERCENT_MIN=5
ATR_PERIOD=14
ATR_LOOKBACK_DAYS=30

# Стакан
DYN_FILTER_ORDERBOOK_ENABLED=true
ORDERBOOK_TOP_LEVELS=20
ORDERBOOK_HOLE_PCT=0.01

# Корреляция с BTC/ETH
DYN_FILTER_CORR_ENABLED=true
CORR_TF=1h
CORR_LOOKBACK_BARS=200
CORR_WITH_BTC_ETH_MAX=0.6

# ── Telegram отчёты (weak_corr_pairs) ────────────────────────────
TELEGRAM_ENABLED=true
TELEGRAM_HOURLY_AT=:05   # во сколько слать отчёт каждый час
TELEGRAM_MAX_ROWS=30
TELEGRAM_SEND_ON_START=true
TELEGRAM_BOT_TOKEN=8434057957:AAGaZYXzmndp67A4m8TiYrxl4Hlomc21DZw          # токен бота
TELEGRAM_CHAT_ID=-1002986979555 # id канала/чата

# ── Telegram: High/Low RSI (НОВЫЙ отчёт)
RSI_REPORT_ENABLED=true
RSI_TELEGRAM_BOT_TOKEN=8247534015:AAE1t9luWQ7sqcYzx255SPKuAIoVWXFoL-M
RSI_TELEGRAM_CHAT_ID=-1002986979555
RSI_REPORT_TF=1h
RSI_REPORT_TOP_N=10
RSI_REPORT_HOURLY_AT=:07
RSI_REPORT_SEND_ON_START=true